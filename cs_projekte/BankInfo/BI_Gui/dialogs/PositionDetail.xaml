<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:BI_Gui="clr-namespace:BI_Gui" x:Class="BI_Gui.dialogs.PositionDetail"
        Title="Auszugsposition" Height="411" Width="709" ShowInTaskbar="False">
    <Grid>
        <Label Content="Betrag" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="69,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="106">
            <Binding Path="amt" />
        </TextBox>
        <Label Content="Valuta" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="69,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="106">
            <Binding Path="effdt" />
        </TextBox>
        <TextBox Height="23" Margin="260,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="106" Text="{Binding posteddt}"/>
        <TextBox Height="46" Margin="69,68,10,0" TextWrapping="Wrap" VerticalAlignment="Top">
            <Binding Path="memo" />
        </TextBox>
        <TextBox Margin="69,119,10,10" TextWrapping="Wrap" Text="{Binding voucher}"/>
        <Label Content="Buchung" HorizontalAlignment="Left" Margin="191,38,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
