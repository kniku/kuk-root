<Controls:MetroWindow x:Class="_02WpfMetro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="02WpfMetro" Height="350" Width="525"
        GlowBrush="{DynamicResource AccentColorBrush}"
        EnableDWMDropShadow="True"
        ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen">

    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Content="settings" />
            <Button Content="about"/>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <Grid>
        <TextBlock x:Name="txtInfo" Margin="10,10,0,10" TextWrapping="Wrap" RenderTransformOrigin="5.489,0.385" HorizontalAlignment="Left" Width="208" Text="textblock"/>

    </Grid>
</Controls:MetroWindow>
